#include <stdio.h>

int main() {
    int matrix[3][3] = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
    int row_sum, col_sum;

    for (int i = 0; i < 3; i++) {
        row_sum = 0;
        col_sum = 0;
        for (int j = 0; j < 3; j++) {
            row_sum += matrix[i][j];
            col_sum += matrix[j][i];
        }
        printf("Sum of row %d: %d\n", i + 1, row_sum);
        printf("Sum of column %d: %d\n", i + 1, col_sum);
    }

    return 0;
}
